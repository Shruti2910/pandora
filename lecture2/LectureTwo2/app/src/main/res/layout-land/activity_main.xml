<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgimg"
    android:orientation="vertical"
    android:clipToPadding="false"
    tools:context="com.example.test.lecturetwo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        >

        <FrameLayout
            android:layout_width="100dp"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:elevation="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/profileimg"
                android:layout_margin="10dp"

                />
            <ImageView
                android:src="@drawable/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>


        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="cursive"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="45sp"
            android:text=" Lakshay Taneja (Carpe diem...) "


            />

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:elevation="10dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingBottom="15dp"
        android:clipToPadding="false"
        >



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="0dp"

        android:layout_weight="50"
        android:elevation="5dp"
        android:layout_height="match_parent"
        android:outlineProvider="bounds"
        android:clipToPadding="false"

        >

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="35sp"
            android:fontFamily="casual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/str"
            android:textColor="@android:color/black"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"

        android:elevation="5dp"
        android:outlineProvider="bounds"

        >

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="35sp"
            android:fontFamily="casual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/str1"

            android:textColor="@android:color/black"

            />


    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:elevation="5dp"
    android:outlineProvider="bounds"
    >
    <TextView

        android:padding="5dp"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Contact Me : "
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />

    <TextView

        android:padding="10dp"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Mobile : 9910531883"
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />

    <TextView

        android:padding="10dp"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Email : Lakshaytaneja26@gmail.com"
        android:fontFamily="casual"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />



</LinearLayout>
</LinearLayout>
</ScrollView>